<% include ./partials/header%>

<div class="container" style="text-align: center; padding-top:5% ">
	<h1><strong>Asssignment</strong> </h1>
	<div class="container" style="padding-top: 1%; width:30%">
	<form id=taskForm action="/dashboard/task/assignment" method="POST" >
	<div class="form-group">
		<input class="form-control" type="text" name="standard" placeholder="CLASS">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="subject" placeholder="SUBJECT">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="lastdate" placeholder="DEADLINE">
	</div>
	<div class="form-group" style="border-radius: 2px;">
		<textarea class="form-control" name="body" rows="7" cols="25" placeholder="HOMEWORK"></textarea>
	</div>
	<div class="form-group">
		<button class="btn btn-lg btn-info">Submit</button>
	</div>
</form>
</div>
</div>

 


<% include ./partials/footer%>